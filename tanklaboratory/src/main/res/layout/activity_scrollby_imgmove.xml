<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <com.skx.tomike.tanklaboratory.widget.view.TranslateImageView
        android:id="@+id/tv_scroller_transImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/skx_e0e0e0"
        android:scaleType="matrix"
        android:src="@drawable/image_03" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:onClick="startTranslate"
        android:text="移动"
        android:textColor="@color/skx_212121"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="reset"
        android:text="重置"
        android:textColor="@color/skx_212121"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

</LinearLayout>
