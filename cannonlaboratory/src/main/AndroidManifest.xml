<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skx.tomike.cannonlaboratory">

    <uses-permission android:name="android.permission.NFC" />
    <application>
        <activity android:name="com.skx.tomike.cannonlaboratory.ui.activity.NotificationActivity"></activity>
        <activity android:name="com.skx.tomike.cannonlaboratory.ui.activity.OutterStartActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- tenvideo2://?action=66&from= qn2at72s9jb3xk -->
                <data
                    android:host="tomike.com"
                    android:scheme="skxdad" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.TransparentThemeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/GlobalCaptchaTheme.Transparent"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />

        <activity android:name="com.skx.tomike.cannonlaboratory.ui.activity.FloatingWindowActivity" />

        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.NfcGroupActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />

            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.NfcWriteTextActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.NfcReadTextActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.NfcPermissionTestActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.PermissionIntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.RxJavaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.OkHttpActivity"
            android:screenOrientation="portrait" /> <!-- 图片加载 -->
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.ImageLoadActivity"
            android:screenOrientation="portrait" /> <!-- viewpager一屏多展示item activity -->
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.VpMultiplePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.GlideActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.ZoomHeaderListViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.skx.tomike.cannonlaboratory.ui.activity.PageIndicatorActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.skx.tomike.cannonlaboratory.ui.activity.RoomTestActivity" />
    </application>

</manifest>