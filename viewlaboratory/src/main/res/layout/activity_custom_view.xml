<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.skx.tomike.viewlaboratory.activity.CustomViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.skx.tomike.viewlaboratory.view.ScoreView
            android:id="@+id/customView_scoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.skx.tomike.viewlaboratory.view.CanvasTestView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_1f000000"
            android:padding="10dp"
            app:radius="50dp"
            app:shape="circle"
            app:solid_color="@color/skx_ff4081" />

        <com.skx.tomike.viewlaboratory.view.CanvasTestView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_1f000000"
            android:padding="10dp"
            app:radius="50dp"
            app:shape="circle"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_3a9173"
            app:stroke_width="3dp" />

        <com.skx.tomike.viewlaboratory.view.CanvasTestView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_1f000000"
            android:padding="10dp"
            app:shape="rectangle"
            app:solid_color="@color/skx_ff4081" />

        <com.skx.tomike.viewlaboratory.view.CanvasTestView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_1f000000"
            android:padding="10dp"
            app:shape="rectangle"
            app:solid_color="@color/skx_ff4081"
            app:stroke_color="@color/skx_3a9173"
            app:stroke_width="3dp" />

        <com.skx.tomike.viewlaboratory.view.CanvasTestView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/skx_1f000000"
            android:padding="10dp"
            app:shape="rectangle"
            app:stroke_color="@color/skx_ff4081"
            app:stroke_width="3dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
