<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_video_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/homepage_video_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skx_f3f3f3">

    </android.support.v4.view.ViewPager>

    <ImageButton
        android:id="@+id/homepage_video_previousBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:paddingBottom="25dp"
        android:paddingEnd="15dp"
        android:paddingLeft="0dp"
        android:paddingRight="15dp"
        android:paddingStart="0dp"
        android:paddingTop="25dp"
        android:src="@drawable/homepage_video_previous" />

    <ImageButton
        android:id="@+id/homepage_video_nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:paddingBottom="25dp"
        android:paddingEnd="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="0dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:src="@drawable/homepage_video_next" />
</RelativeLayout>
