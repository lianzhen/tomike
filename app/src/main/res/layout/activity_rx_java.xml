<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skx.tomike.activity.function.RxJavaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/view_marginLeft_15"
            android:layout_marginLeft="@dimen/view_marginLeft_15"
            android:layout_marginEnd="@dimen/view_marginRight_15"
            android:layout_marginRight="@dimen/view_marginRight_15"
            android:background="@drawable/rectangle_solid_b4ff4081_corner_20dp"
            android:gravity="center"
            android:onClick="parallelBegin"
            android:text="并行：A/B= ->> A+B  "
            android:textColor="@color/skx_212121"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serial"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="@dimen/view_marginLeft_15"
            android:layout_marginLeft="@dimen/view_marginLeft_15"
            android:layout_marginEnd="@dimen/view_marginRight_15"
            android:layout_marginRight="@dimen/view_marginRight_15"
            android:background="@drawable/rectangle_solid_b4ff4081_corner_20dp"
            android:gravity="center"
            android:onClick="serialOrderBegin"
            android:text="串行：A->B ->> A+B  "
            android:textColor="@color/skx_212121"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_rxjava_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skx_ff4081"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="-70dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/rl_rxjava_loadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="loading..."
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>
