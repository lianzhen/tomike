<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboard_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/view_paddingLeft_15"
    android:paddingRight="@dimen/view_paddingRight_15"
    tools:context=".activity.HomeActivity">

    <EditText
        android:id="@+id/keyboard_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:hint="请输入"
        android:textSize="14sp" />

    <Button
        android:id="@+id/keyboard_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/keyboard_et"
        android:layout_marginTop="31dp"
        android:text="点击" />

    <Button
        android:id="@+id/keyboard_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/keyboard_et"
        android:layout_marginTop="106dp"
        android:text="点击2" />
</RelativeLayout>