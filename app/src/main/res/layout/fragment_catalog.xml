<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.skx.tomike.fragment.business.CatalogFragment">

    <TextView
        android:id="@+id/catalog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48"
        android:background="@color/skx_30c3a6"
        android:gravity="center"
        android:padding="@dimen/view_padding_15"
        android:text="@string/catalog"
        android:textColor="@color/skx_2c3e50"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/catalog_style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_height_48"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="@dimen/view_padding_15"
        android:text="@string/catalog_style"
        android:textColor="@color/skx_2c3e50"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catalog_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/catalog_title"
        android:dividerHeight="2dp" />

</RelativeLayout>
