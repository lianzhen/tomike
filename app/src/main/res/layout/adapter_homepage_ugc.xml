<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_ugc_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/view_paddingRight_15"
    android:paddingLeft="@dimen/view_paddingRight_15"
    android:paddingRight="@dimen/view_paddingRight_15"
    android:paddingStart="@dimen/view_paddingRight_15"
    android:paddingTop="@dimen/view_padding_15">

    <LinearLayout
        android:id="@+id/homepage_ugc_userInfo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/view_padding_15"
        android:paddingTop="@dimen/view_padding_15">

        <ImageView
            android:id="@+id/homepage_ugc_userInfo_headImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clipChildren="false"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/homepage_ugc_userInfo_userName_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/homepage_ugc_userInfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千里狼烟"
                android:textColor="@color/skx_323232"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/homepage_ugc_userInfo_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房东"
                android:textColor="@color/skx_bdbdbd"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.Space
            android:id="@+id/homepage_ugc_content_leftMargin"
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/homepage_ugc_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/homepage_ugc_content_leftMargin"
            android:layout_toRightOf="@id/homepage_ugc_content_leftMargin">

        </android.support.v4.view.ViewPager>

        <!-- 页签 -->
        <LinearLayout
            android:id="@+id/homepage_ugc_pageIndicator_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homepage_ugc_pageIndicator_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_homepage_ugc_left_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/homepage_ugc_pageIndicator_currentPage_container"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                </LinearLayout>

                <View
                    android:layout_width="25dp"
                    android:layout_height="2dp"
                    android:background="@color/skx_323232" />

                <TextView
                    android:id="@+id/homepage_ugc_pageIndicator_totalPages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:paddingTop="2dp"
                    android:text="6"
                    android:textColor="@color/skx_bdbdbd"
                    android:textSize="24sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/homepage_ugc_pageIndicator_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_homepage_ugc_right_black" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
