<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ThreadCallbackActivity">

    <TextView
        android:id="@+id/tv_threadCallback_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="守护线程"
        android:textColor="@color/skx_212121"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_threadCallback_daemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mainThreadWaitFun"
        android:text="主线程等待法"
        android:textColor="@color/skx_212121"
        app:layout_constraintBottom_toBottomOf="@id/btn_threadCallback_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_threadCallback_start"
        app:layout_constraintTop_toTopOf="@id/btn_threadCallback_start" />

    <Button
        android:id="@+id/btn_threadCallback_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="threadJoinFun"
        android:text="Thread-join 法"
        android:textColor="@color/skx_212121"
        app:layout_constraintLeft_toRightOf="@id/btn_threadCallback_daemon"
        app:layout_constraintRight_toLeftOf="@id/btn_threadCallback_reset"
        app:layout_constraintTop_toBottomOf="@id/tv_threadCallback_title" />

    <Button
        android:id="@+id/btn_threadCallback_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onFutureTaskFun"
        android:text="使用 FutureTask 实现"
        android:textColor="@color/skx_212121"
        app:layout_constraintLeft_toRightOf="@id/btn_threadCallback_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_threadCallback_start" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_solid_b226a69a_corner_2"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_threadCallback_reset"
        tools:layout_editor_absoluteY="192dp">

        <TextView
            android:id="@+id/tv_threadCallback_logcat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/skx_212121"
            android:textSize="14sp" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
